<body>
<% include partials/header %>

<section id="form"><!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-2">
				<div class="left-sidebar">
				
				    <h2>My Account</h2>
				    <div class="panel-group category-products" id="profileAccordian">
				
				        <div id="userInfo" class="panel panel-default">
				            <div class="panel-heading">
				                <h4 class="panel-title"><a href="/profile">My Profile</a></h4>
				            </div>
				        </div>
				        <div id="userOrders" class="panel panel-default">
				            <div class="panel-heading">
				                <h4 class="panel-title"><a href="/myOrders">My Orders</a></h4>
				            </div>
				        </div>
				        
				    </div>
				</div>
			</div>
		           
		   	<h2></h2>
		    <div id="profile-info-div" class="col-sm-8 col-sm-offset-1 user-info-container">
		        <h2> Primary Information</h2>
		        <div class="user-table-content">
		            <table class="paddingBetweenCols">
		                <tbody>
		                	<tr>
		                		<td > Name </td>
		                		<td ><%= user.name %> </td>
		                	</tr>
		                	<tr>
		                		<td> Phone Number </td>
		                		<td ><%= user.phone %> </td>
		                	</tr>
		                	<tr>
		                		<td > Email Id </td>
		                		<td ><%= user.email %> </td>
		                	</tr>
		                	<tr>
		                		<td > Street Address </td>
		                		<td > <%= user.streetAddress %>  </td>
		                	</tr>
		                	<tr>
		                		<td > Area </td>
		                		<td > <%= user.area %> </td>
		                	</tr>
		                	<tr>
		                		<td > City </td>
		                		<td > <%= user.city %> </td>
		                	</tr>
		                	<tr>
		                		<td > zipcode </td>
		                		<td > <%= user.zip %> </td>
		                	</tr>
		                </tbody>
		        	</table>
		        </div>
		        
		    		<button type="button" class="btn btn-default edit-profile-btn" onclick="editProfileClick()">Edit</button>
				
    		</div>
    		
    		
    		<div id="profile-edit-div" class="col-sm-8 col-sm-offset-1 user-info-container edit-form">
		        <h2> Primary Information</h2>
		        <div class="edit-profile-form">
		            <form method="post" action="/editProfile">
		        
		        		<input type="text" name="name" placeholder="Name   <%= user.name %>"/>
                        <input type="number" name="phone"  placeholder="Phone No. <%= user.phone %>"/>
                        <input type="text" name="streetAddress" placeholder="Door No and Street Address <%= user.streetAddress %>"/>
                        <input type="text" name="area" placeholder="Area  <%= user.area %>"/>
                        <input type="text" name="city" placeholder="City <%= user.city %>"/>
                        <input type="number" name="zip" placeholder="zipcode <%= user.zip %>"/>
                        
		    		<button type="button" class="btn btn-default edit-profile-btn" onclick="cancelEditProfileClick()">Cancel</button>
		    		<button type="submit" class="btn btn-default edit-profile-btn" >Update</button>
				</form>
		        </div>
    		</div>
    		
		</div>
	</div>
</section>


<% include partials/footer %>



