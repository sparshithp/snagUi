<% include partials/header %>

<section id="form"><!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form"><!--login form-->
                    <h2>Login to your account</h2>
                    <form method="post" action="/login">
                        <input name="email" type="email" placeholder="Email Address" />
                        <input name="password" type="password" placeholder="Password" />
							<span>
								<input type="checkbox" class="checkbox">
								Keep me signed in
							</span>
                        <button type="submit" class="btn btn-default">Login</button>
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            
            
            <script type="text/javascript">

function submitHandler()
{
  var form = document.getElementById("signUpForm");
	alert(form.name);
	alert(form.name.value);
  return false;
}

window.onload=function(){document.getElementById("signUpForm").attachEvent("onsubmit", submitHandler);}
            
   </script>
            <div class="col-sm-4">
                <div class="signup-form"><!--sign up form-->
                    <h2>New User Signup!</h2>
                    <form method="post" id="signUpForm" onsubmit="return checkSignUpForm()" action="/signUp">
                        <input type="text" name="name", placeholder="Name"/>
                        <input type="email" name="email", placeholder="Email Address"/>
                        <input type="password" name="password", placeholder="Password"/>
                        <input type="password" name="confirmPassword", placeholder="Confirm Password"/>
                        <input type="number" name="phone", placeholder="Phone No."/>
                        <input type="text" name="streetAddress", placeholder="Door No and Street Address"/>
                        <select name="area" style="margin-bottom:10px; height:35px">
						  <option value="hegdenagar">RK Hegde Nagar</option>
						</select>
                        <select name="city" style="margin-bottom:10px; height:35px">
						  <option value="bangalore">Bangalore</option>
						</select>
                        <input type="number" name="zip", placeholder="zipcode"/>
                        
                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->


