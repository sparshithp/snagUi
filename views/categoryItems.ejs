<% include partials/header %>

<section id="advertisement">
    <div class="container">
        <img src="/images/shop/advertisement.jpg" alt=""/>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <% include partials/left-sidebar %>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items"><!--features_items-->
                    <h2 class="title text-center"><%= category %></h2>

                    <% for(var i = 0; i < items.length; i++) { %>
                    <div class="col-sm-3">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <form method="post" action="/addToCart" onsubmit="return checkQty(this)">
                                        <img src="<%= items[i].imgUrl %>" alt="" style="height: 237px;width: 256px;"/>

                                        <div>
			                           	 	<h2> <strike> &#8377 <%= items[i].variants[0].mrp  %> </strike> </h2>
			                           	 	<h2>  &#8377 <%= items[i].variants[0].salePrice %> </h2>
			                            </div>
                           
                                        <p><%= items[i].name %></p>
                                        <select name="variant" class="variant">
                                            <% for(var j = 0; j < items[i].variants.length; j++){ %>
                                            <% var variants = items[i].variants %>
                                            <option value="<%= variants[j]._id %>"><%= variants[j].size %>
                                                - &#8377 <%= variants[j].salePrice %>
                                            </option>
                                            <% } %>
                                        </select>
                                        <input type="hidden" name="itemId" value="<%=items[i]._id%>">
                                        <input type="number" name="qty" class="btn btn-default add-to-cart" title="Qty"
                                               min="1" max="100" placeholder="Qty">
                                        <button type="submit" class="btn btn-default add-to-cart"><i
                                                    class="fa fa-shopping-cart"></i>Add to cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div><!--features_items-->
                
                <ul class="pagination">
                 <% 
                	var pages =  Math.floor(totalItems/9) ;
                	if(totalItems % 9 != 0){
                	 	pages = pages + 1;
                	 }
                	for(var k=1; k<=pages; k++){
                %>
                        <li ><a href="/category/<%=category%>/<%=k%>"> <%=k%> </a></li>
                 <%}%>
                        <li><a href="">&raquo;</a></li>
                    </ul>
            </div>
        </div>
    </div>
</section>

<% include partials/footer %>

<script src="/js/homeAndCategory.js"></script>
<script src="/js/jquery.js"></script>
<script src="/js/price-range.js"></script>
<script src="/js/jquery.scrollUp.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/jquery.prettyPhoto.js"></script>
<script src="/js/main.js"></script>
</body>
</html>